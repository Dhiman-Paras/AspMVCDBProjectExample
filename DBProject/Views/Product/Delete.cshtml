@*Delete page of Product*@
@model DBProject.Models.Product
@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/LayoutPage1.cshtml";
}

<h2>Delete</h2>


<table class="table">
    <tr>
        <td>Product ID</td>
        <td> @Model.ProductID</td>
    </tr>

    <tr>
        <td>Product Name</td>
        <td> @Model.ProductName</td>
    </tr>

    <tr>
        <td>Product Price</td>
        <td>
            @if (Model.Price.HasValue)
            {
                <span> @Model.Price.Value.ToString("C") </span>

            }

        </td>
    </tr>

    <tr>
        <td>Product Date of Purchase</td>
        <td>
            @if (Model.DateOfPurchase.HasValue)
            {
            <span> @Model.DateOfPurchase.Value.ToString("dd mm yyyy")</span>  
            }
        </td>


    </tr>

    <tr>
        <td>Product Avaulability Status</td>
        <td> @Model.AvailabilityStatus</td>
    </tr>

    <tr>
        <td>Product Category</td>
        <td>
            @if (Model.Category != null)
            {
            <span>@Model.Category.CategoryName </span>
        }
        </td>
    </tr>

    <tr>
        <td>Product Brand </td>
        <td>
            @if (Model.Brand != null)
            {
            <span> @Model.Brand.BrandName </span>
             }
        </td>
    </tr>

    <tr>
        <td>Product Active</td>
        <td> @Model.Active</td>
    </tr>

    <tr>
        <td>Product Photo</td>
        <td><img src="data:image;base64,@Model.Photo" width="100" height="150" /> </td>
    </tr>
</table>


<form action="/Product/Delete/@Model.ProductID" method="post">
    <div class="form-row">
        <div class="form-group col-md-6">

            <input type="hidden" name="ProductID" value="@Model.ProductID" />
        </div>

    </div>
    <button type="submit" class="bg-danger btn text-white">Delete</button>
    <a href="/Product/Index" class="btn bg-success text-white">Cancle</a>
</form>